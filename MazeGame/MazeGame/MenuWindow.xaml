<Window x:Class="MazeGame.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="768" Width="1024">
    <Canvas xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
        <Canvas.Background>
            <ImageBrush ImageSource="simple0.jpg" TileMode="FlipX"
                        Viewport="0,0,600,400" ViewportUnits="Absolute" />
        </Canvas.Background>
        <!--   <Image x:Name="buddyIcon" Width="1024" Height="768"/>   -->
        <Button x:Name="Solo" Width="152" Height="35" Canvas.Left="419" Canvas.Top="64" FontWeight="bold" 
                Background="LightBlue" BorderBrush="DarkBlue" Foreground="DarkBlue" Click="myButtonClicked" >
            <!--we can use image as content as well--> Solo</Button>
        <Button x:Name="COOP" Width="152" Height="35" Canvas.Left="419" Canvas.Top="140">Co-op</Button>
        <Button x:Name="Settings" Width="152" Height="35" Canvas.Left="419" Canvas.Top="204" Content="Settings"/>
        <Button x:Name="Exit" Width="152" Height="35" Canvas.Left="419" Canvas.Top="272" Content="Exit"/>
